 </header>
@using MyBlogNew.Areas.Admin.Models;
@model PostMaintainViewModel
@{
    ViewBag.Title = "查看文章";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "post-form" }))
{
     <center>
    <h2>@Model.Title</h2>
    <span>作者:@Model.Author</span><text><br>创建时间:</text>@Model.CreateTime
    @Html.Raw(Model.Content)
     </center>

}

